#!/bin/bash
################################################################################
# Workstation Verification Script
# Generated by Ansible for {{ hostname }}
################################################################################

echo "========================================="
echo "Workstation Verification Script"
echo "Hostname: {{ hostname }}"
echo "========================================="
echo ""

echo "Network Configuration:"
ip addr show {{ network.interface }} | grep inet || echo "  Network interface not configured"
echo ""

echo "AD Integration:"
realm list 2>/dev/null || echo "  Not joined to domain yet"
echo ""

echo "SSSD Status:"
systemctl status sssd --no-pager 2>/dev/null || echo "  SSSD not running"
echo ""

echo "Printer Status:"
lpstat -p -d 2>/dev/null || echo "  No printers configured"
echo ""

echo "Nightly Reset Timer:"
systemctl status workstation-nightly-reset.timer --no-pager 2>/dev/null || echo "  Nightly reset not configured"
echo ""

echo "Firewall Status:"
firewall-cmd --list-all 2>/dev/null || echo "  Firewall not configured"
echo ""

echo "OSTree Status:"
rpm-ostree status 2>/dev/null || echo "  Not using OSTree"
echo ""

echo "========================================="
echo "Verification complete"
echo "========================================="

# Remote syslog configuration for {{ hostname }}
# Generated by Ansible - Forward all logs to monitoring server

# Forward all logs to monitoring server via TCP
*.* @@{{ logging.rsyslog.target }}:{{ logging.rsyslog.port }}

# Also log authentication events to monitoring server with high priority
auth,authpriv.* @@{{ logging.rsyslog.target }}:{{ logging.rsyslog.port }}

# Log audit events
audit.* @@{{ logging.rsyslog.target }}:{{ logging.rsyslog.port }}

# Format: RFC3164 with hostname and priority
$ActionFileDefaultTemplate RSYSLOG_TraditionalFileFormat

# Queue settings for reliable delivery
$ActionQueueType LinkedList
$ActionQueueFileName {{ hostname }}_forward
$ActionResumeRetryCount -1
$ActionQueueSaveOnShutdown on
$ActionQueueMaxDiskSpace 1g
